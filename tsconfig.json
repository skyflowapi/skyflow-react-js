{
    "compilerOptions": {
      // Default
      "target": "es5", 
      "esModuleInterop": true, 
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
  
      // Added
      "lib": ["dom", "esnext"],
      "importHelpers": true,
      "jsx": "react", 
      "module": "ESNext",  
      "declaration": true,
      "declarationDir": "types",
      "sourceMap": true,
      "outDir": "dist",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "emitDeclarationOnly": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "tests/*.test.*"]
  }